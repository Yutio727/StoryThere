<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:theme="@style/Theme.StoryThere"
    android:fillViewport="true"
    android:elevation="16dp"
    android:outlineProvider="bounds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="?attr/colorSurface"
        android:gravity="center_horizontal"
        android:elevation="16dp"
        android:outlineProvider="bounds">

        <!-- Font Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/font_size"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <SeekBar
                android:id="@+id/fontSizeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="32"
                android:progressBackgroundTint="?attr/colorControlNormal"
                android:progressTint="@color/progress_blue"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/fontSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:minWidth="40dp"
                android:text="12.0"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat" />
        </LinearLayout>

        <!-- Letter Spacing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letter_spacing"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <SeekBar
                android:id="@+id/letterSpacingSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="20"
                android:progressBackgroundTint="?attr/colorControlNormal"
                android:progressTint="@color/progress_blue"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/letterSpacingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:minWidth="40dp"
                android:text="0.0"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat" />
        </LinearLayout>

        <!-- Line Height -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line_height"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <SeekBar
                android:id="@+id/lineHeightSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="20"
                android:progressBackgroundTint="?attr/colorControlNormal"
                android:progressTint="@color/progress_blue"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/lineHeightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:minWidth="40dp"
                android:text="1.0"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat" />
        </LinearLayout>

        <!-- Paragraph Spacing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paragraph_spacing"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <SeekBar
                android:id="@+id/paragraphSpacingSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="20"
                android:progressBackgroundTint="?attr/colorControlNormal"
                android:progressTint="@color/progress_blue"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/paragraphSpacingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:minWidth="40dp"
                android:text="1.0"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat" />
        </LinearLayout>

        <!-- Text Alignment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_alignment"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/alignmentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/alignLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/left"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat"
                android:buttonTint="@color/progress_blue" />

            <RadioButton
                android:id="@+id/alignCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/center"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat"
                android:buttonTint="@color/progress_blue" />

            <RadioButton
                android:id="@+id/alignRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/right"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/montserrat"
                android:buttonTint="@color/progress_blue" />
        </RadioGroup>

    </LinearLayout>
</ScrollView> 