<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryThere" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/progress_blue</item>
        <item name="colorSecondaryVariant">@color/progress_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.StoryThere.PopupMenu.Small</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.StoryThere.PopupMenu.Large</item>
        <item name="popupMenuStyle">@style/Widget.StoryThere.PopupMenu</item>
        <item name="popupMenuBackground">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>

        <!-- Dialog Button Styles -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Dialog</item>

        <!-- Dialog Title Style -->
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.StoryThere.DialogTitle</item>
    </style>

    <style name="Theme.StoryThere.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.StoryThere.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.StoryThere.PopupMenu.Small</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.StoryThere.PopupMenu.Large</item>
        <item name="popupMenuStyle">@style/Widget.StoryThere.PopupMenu</item>
        <item name="popupMenuBackground">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>

        <!-- Dialog Button Styles -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Dialog</item>

        <!-- Dialog Title Style -->
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.StoryThere.DialogTitle</item>
    </style>

    <style name="Widget.StoryThere.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.StoryThere.PopupMenu.Small" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.StoryThere.PopupMenu.Large" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.StoryThere.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Widget.App.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/progress_blue</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.StoryThere.DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dialog_title_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.StoryThere.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/dialog_background_light</item>
        <item name="android:colorBackground">@color/dialog_background_light</item>
    </style>

</resources>
